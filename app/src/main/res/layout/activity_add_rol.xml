<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtTituloRol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrar Rol"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_gravity="center"
        android:paddingBottom="10dp" />

    <EditText
        android:id="@+id/edtNombreRol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del rol" />

    <EditText
        android:id="@+id/edtDescripcionRol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="DescripciÃ³n"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnGuardarRol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Guardar Rol"
        android:layout_marginTop="15dp" />

    <ListView
        android:id="@+id/lvRoles"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="15dp" />

</LinearLayout>
